# Definir la matriz bidimensional
matriz = [
    [1, 2, 3],
    [4, 5, 6],
    [
    [
7, 8, 9]
]

# Función para buscar un valor específico en la matriz
def buscar_valor(valor):
    for i in range(len(matriz)):
        for j in range(len(matriz[i])):
            if matriz[i][j] == valor:
                return f"El valor {valor} se encuentra en la posición ({i}, {j}) de la matriz."
    return f"El valor {valor} no se encontró en la matriz."

# Valor a buscar
valor_buscar = 5

# Realizar la búsqueda e imprimir el resultado
resultado = buscar_valor(valor_buscar)
print(resultado)
